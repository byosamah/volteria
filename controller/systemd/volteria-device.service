[Unit]
Description=Volteria Device Service (Modbus I/O, Polling)
Documentation=https://volteria.org/docs
After=volteria-config.service
Requires=volteria-config.service
PartOf=volteria-supervisor.service

[Service]
Type=simple
User=volteria
Group=volteria
WorkingDirectory=/opt/volteria/controller
ExecStart=/opt/volteria/venv/bin/python -m services.device.service
Restart=on-failure
RestartSec=10

# Graceful shutdown - allow time for cleanup before SIGKILL
TimeoutStopSec=30
KillMode=mixed

# Environment
Environment=PYTHONUNBUFFERED=1
Environment=VOLTERIA_STATE_DIR=/run/volteria/state
EnvironmentFile=/etc/volteria/env

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=volteria-device

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/opt/volteria/data /var/log/volteria /run/volteria
PrivateTmp=yes

[Install]
WantedBy=volteria-supervisor.service
