[Unit]
Description=Volteria Config Service (Sync, Cache, Versioning)
Documentation=https://volteria.org/docs
After=volteria-system.service
Requires=volteria-system.service
PartOf=volteria-supervisor.service

[Service]
Type=simple
User=volteria
Group=volteria
WorkingDirectory=/opt/volteria/controller
ExecStart=/opt/volteria/venv/bin/python -m services.config.service
Restart=on-failure
RestartSec=10

# Graceful shutdown - allow time for cleanup before SIGKILL
TimeoutStopSec=30
KillMode=mixed

# Environment
Environment=PYTHONUNBUFFERED=1
Environment=VOLTERIA_STATE_DIR=/run/volteria/state
EnvironmentFile=/etc/volteria/env

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=volteria-config

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/opt/volteria/data /etc/volteria /var/log/volteria /run/volteria
PrivateTmp=yes

[Install]
WantedBy=volteria-supervisor.service
